{% extends 'base.html.twig' %}

{% block content %}
	<div
		class="container py-2 px-2">
		{# Cover Section #}
		<div class="profile-cover rounded-top" style="height: 140px;"></div>

		<div
			class="">
			{# Main Profile Card #}
			<div
				class="profile-main-card card border-0 shadow-sm">
				{# Profile Picture Section #}
				<div class="profile-picture-section">
					{% if user.profilePicture %}
						<img src="{{ vich_uploader_asset(user, 'profilePictureFile') }}" alt="Profile picture" class="profile-picture">
					{% else %}
						<div class="profile-picture-placeholder">
							{{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
						</div>
					{% endif %}
				</div>

				{# Profile Info Section #}
				<div class="card-body pb-4">
					<div class="row">
						<div class="col-md-8 offset-md-2">
							<h1 class="profile-name">{{ user.firstName }}
								{{ user.lastName }}</h1>
							<p class="text-muted">{{ user.email }}</p>
						</div>
					</div>
				</div>
			</div>

			{# Content Section #}
			<div
				class="row mt-4">
				{# Left Column #}
				<div class="col-md-4">
					<div class="card shadow-sm mb-4">
						<div class="card-body">
							<h5 class="card-title mb-3">About</h5>
							<div class="profile-info">
								<div class="info-item">
									<i class="fas fa-envelope text-muted"></i>
									<span>{{ user.email }}</span>
								</div>
								{% if user.birthday %}
									<div class="info-item">
										<i class="fas fa-birthday-cake text-muted"></i>
										<span>{{ user.birthday|date('F d, Y') }}</span>
									</div>
								{% endif %}
							</div>
						</div>
					</div>
				</div>

				{# Right Column #}
				<div class="col-md-8">
					<div class="card shadow-sm">
						<div class="card-body">
							<h5 class="card-title mb-4">Recent Activity</h5>
							<div class="text-center text-muted py-5">
								<i class="fas fa-stream fa-2x mb-3"></i>
								<p>No activity to show yet</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
