<!DOCTYPE html>
<html lang="en" class="h-100">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		{# Turbo Configuration #}
		<meta name="turbo-cache-control" content="no-preview">
		<meta name="turbo-refresh-method" content="morph">
		<meta name="turbo-refresh-scroll" content="preserve">
		
		{# SEO Meta Tags #}
		<title>{% block title %}Welcome!{% endblock %} | {{ app_name }}</title>
		<meta name="description" content="{% block meta_description %}Connect and share with friends on {{ app_name }}, a modern social platform for meaningful interactions.{% endblock %}">
		<meta name="keywords" content="social media, social network, connect, share, posts, {{ app_name }}">
		<meta name="author" content="{{ app_name }}">
		
		{# Open Graph / Facebook #}
		<meta property="og:type" content="website">
		<meta property="og:url" content="{{ app.request.uri }}">
		<meta property="og:title" content="{% block og_title %}{{ block('title') }} | {{ app_name }}{% endblock %}">
		<meta property="og:description" content="{% block og_description %}{{ block('meta_description') }}{% endblock %}">
		<meta property="og:image" content="{% block og_image %}{{ absolute_url(asset('build/images/og-image.jpg')) }}{% endblock %}">
		<meta property="og:site_name" content="{{ app_name }}">
		
		{# Twitter #}
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content="{{ app.request.uri }}">
		<meta property="twitter:title" content="{% block twitter_title %}{{ block('og_title') }}{% endblock %}">
		<meta property="twitter:description" content="{% block twitter_description %}{{ block('og_description') }}{% endblock %}">
		<meta property="twitter:image" content="{% block twitter_image %}{{ block('og_image') }}{% endblock %}">
		
		{# Favicon #}
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
	{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
	{% endblock %}

	{% block javascripts %}
		{# Load Stimulus/Turbo via importmap #}
		{{ importmap('app') }}
		{# Load custom compiled JS via Webpack Encore #}
		{{ encore_entry_script_tags('app') }}
	{% endblock %}

		{# Add Inter Font #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

		<style>
			body {
				font-family: 'Inter', system-ui, -apple-system, sans-serif;
			}

			/* This ensures all elements inherit the font */
			* {
				font-family: inherit;
			}
		</style>

		{# Add CSRF Token #}
		<meta name="csrf-token" content="{{ csrf_token('delete-item') }}">
	</head>
	<body class="d-flex flex-column h-100 bg-light">
		{% block navigation %}
			{% include 'components/navbar.html.twig' %}
		{% endblock %}

	<br>
	
	{# Flash Messages Container #}
	<div id="flash-container" class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999; max-width: 350px;">
		{% for type, messages in app.flashes %}
			{% for message in messages %}
				<div class="toast-notification mb-2" role="alert">
					<i class="fas 
						{% if type == 'success' %}fa-check-circle
						{% elseif type == 'danger' or type == 'error' %}fa-exclamation-circle
						{% elseif type == 'warning' %}fa-exclamation-triangle
						{% else %}fa-info-circle
						{% endif %} me-2"></i>
					{{ message }}
					<button type="button" class="btn-close-toast" onclick="this.parentElement.remove()">
						<i class="fas fa-times"></i>
					</button>
				</div>
			{% endfor %}
		{% endfor %}
	</div>

	<!-- Main Content -->
	<main class="flex-shrink-0">
		<div class="container mb-5 pb-5"> {% block content %}{% endblock %}
			</div>
		</main>

			{% block footer %}
				<!-- Sticky Footer -->
				<footer class="footer mt-auto py-3">
					{% include 'components/footer.html.twig' %}
				</footer>
			{% endblock %}

			<!-- Delete Confirmation Modal -->
			<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">
						<div class="modal-header border-0">
							<h5 class="modal-title">Delete Post</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
						</div>
						<div class="modal-body">
							Are you sure you want to delete this post?
						</div>
						<div class="modal-footer border-0">
							<button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
							<button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
						</div>
					</div>
				</div>
			</div>

	</body>
	</html>
