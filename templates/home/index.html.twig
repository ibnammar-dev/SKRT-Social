{% extends 'base.html.twig' %}

{% block title %}Welcome to Our Store{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <div class="hero-section py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="display-4 fw-bold">Welcome to Our Store</h1>
                    <p class="lead">Discover our amazing collection of products at great prices.</p>
                    <a href="{{ path('app_product') }}" class="btn btn-primary btn-lg">Shop Now</a>
                </div>
                <div class="col-md-6">
                    <img src="{{ asset('images/hero-image.jpg') }}" alt="Hero Image" class="img-fluid rounded">
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Categories -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Featured Categories</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-laptop fs-1 mb-3"></i>
                        <h3 class="card-title">Electronics</h3>
                        <p class="card-text">Explore our latest electronic products.</p>
                        <a href="#" class="btn btn-outline-primary">View More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-gift fs-1 mb-3"></i>
                        <h3 class="card-title">Accessories</h3>
                        <p class="card-text">Find the perfect accessories.</p>
                        <a href="#" class="btn btn-outline-primary">View More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="bi bi-house-door fs-1 mb-3"></i>
                        <h3 class="card-title">Home & Living</h3>
                        <p class="card-text">Discover home decoration items.</p>
                        <a href="#" class="btn btn-outline-primary">View More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Why Choose Us -->
    <div class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">Why Choose Us</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="text-center">
                        <i class="bi bi-truck fs-1 mb-3"></i>
                        <h4>Free Shipping</h4>
                        <p>On orders over $50</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <i class="bi bi-shield-check fs-1 mb-3"></i>
                        <h4>Secure Payment</h4>
                        <p>100% secure payment</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <i class="bi bi-arrow-counterclockwise fs-1 mb-3"></i>
                        <h4>Easy Returns</h4>
                        <p>14 day return policy</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <i class="bi bi-headset fs-1 mb-3"></i>
                        <h4>24/7 Support</h4>
                        <p>Dedicated support</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 